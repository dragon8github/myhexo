}

.myPanel {
  position: fixed;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
  z-index: 199307100337;
  width: 600px;
  background: #fff;
  border-radius: 3px;
  box-shadow: 0 0 0 1px hsla(0, 0%, 100%, .3) inset,0 .5em 1em rgba(0, 0, 0, 0.3);
  
  background: url("./images/banner.jpg") 0 / cover fixed;
  
  .myPanel__container {
    position: relative;
    overflow: hidden;
    height: 100%;
    background: hsla(0, 0%, 100%, .25) border-box;
  }
  
      .myPanel__container::before {
          content: '';
          position: absolute; top: 0; right: 0; bottom: 0; left: 0;
          background: url("./images/banner.jpg") 0 / cover fixed;
          filter: blur(20px);
          margin: -30px;
          z-index: -1;
      }
  

  .myPanel__header {
    padding-top: 10px;
    height: 40px;
    box-shadow: 0 0 0 1px hsla(0, 0%, 100%, .3) inset,0 .5em 1em rgba(145, 145, 145, 0.6);
    position: relative;
  }
  
    input.myPanel__header--input {
        width: 100%;
        height: 100%;
        border: 0;
        padding-left: 20px;
        box-sizing: border-box;
        outline: none;
        background: transparent;
    }

  .myPanel__body {
    height: 320px;
    overflow-y: scroll;
    

    .myPanel__body--ul {
      
    }
  }
  

  .myPanel__body--li {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    cursor: pointer;
    padding: 10px;
    
    &:hover {
      background: rgba(200, 200, 200, .25);
    }
    
    &.is-active {
      background: rgba(200, 200, 200, .25);
    }
    
    &:hover .myPanel__body--link, &.is-active .myPanel__body--link {
      box-shadow: 1px 10px 10px -10px rgba(0, 0, 24, 0.5);
      transform: scale(1.2);
    }
  }
  
  .myPanel__body--link {
    text-decoration: none;
    
    display: inline-block;
    vertical-align: middle;
    transform: perspective(1px) translateZ(0);
    box-shadow: 0 0 1px transparent;
    margin: 10px;
    transition-duration: 0.3s;
    transition-property: box-shadow, transform;
  }
  
  .myPanel__body--title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    
    flex: 1;
    padding-left: 10px;
  }
  
  .myPanel__body--tags {
      
  }
  
    .myPanel__body--tag {
      display: inline-block;
      padding: 5px;    
      background: #ccc;
      color:#333;
      font-size: 14px;
      margin-right: 5px;
    }
}

      
              

