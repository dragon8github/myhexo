@font-face {
  font-family: 'HYLeMiaoTiW';
  src : url('./fonts/HYLeMiaoTiW.ttf');
}


html, body, #container, .line, code, .article-entry p, .article-entry table, input {
  height: 100%
  font-family: 'comic sans ms', 'HYLeMiaoTiW', sans-serif !important;
  font-size: 17px;
}

.fr {
  float: right;
}

.js-go-top {
  cursor: pointer;
  
  &:hover {
    opacity: .8;
  }
}

.article-entry td {
    &:first-child {
      padding-right: 30px !important;
      white-space: nowrap;
    }
    text-align: left !important;
}

#header {
  height: 200px !important;
}

    #header:after {
      display: none;
    }

    #header-inner {
      position: absolute !important;
      bottom: 0%;
    }

    #subtitle {
      font-size: 20px;
    }

    .nav-icon, .main-nav-link {
      opacity: 1 !important;
    }

    .nav-icon {
      font-size: 20px !important;
      width: 20px !important;
      height: 20px !important;
    }

    #sub-nav {
        margin-right: 35px !important;
    }

.article-entry .highlight pre {
  overflow: visible;
}

.article-entry blockquote {
  margin: 20px 0 !important;
  text-align: left !important;
  padding: 20px;
  border-left: 6px solid #FF8B00;
  background-color: #FEFFDB;
  color: #2f2f2f;
  
  p {
    margin: auto !important;
    // font-weight: bold;
    // color: #FFC60B;
    color: #ff9b00;
  }
  
  code {
    color: blueviolet;
  }
}

article.is-index {
  position: relative;
}

    article.is-index::after {
        content: '';
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 25px;
        background: linear-gradient(rgba(255, 255, 255, 0.001), white);
        pointer-events: none;
    }

    article.is-index .article-inner {
      height: 295px;
      position: relative;
      overflow-y: scroll;
    }

  

